{
    "compilerOptions": {
      "outDir": "./dist",
      "sourceMap": true,
      "strict": true,
      "module": "es2015",
      "moduleResolution": "node",
      "target": "es5",
      "allowSyntheticDefaultImports": true,
      "isolatedModules": false,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "noImplicitAny": false,
      "noImplicitReturns": true,
      "importHelpers": true,
      "removeComments": true,
      "suppressImplicitAnyIndexErrors": true,
      "allowJs": true,
      "baseUrl": "./",
      "lib": [
        "dom",
        "es2015",
        "es2015.promise"
      ]
    }
  }